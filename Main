#include <iostream>
#include <array>
#include <fstream>
#include <algorithm>
#include <numeric>
using namespace std;

const int DAYS = 30;

int main() {
    array<double, DAYS> rainfall;

    ifstream fin("rainfall.txt");
    if (!fin) {
        cerr << "Error: could not open rainfall.txt\n";
        return 1;
    }

    for (int i = 0; i < DAYS; i++) {
        fin >> rainfall[i];
    }
    fin.close();

    // Display raw data
    cout << "Rainfall for 30 days (mm):\n";
    for (double r : rainfall) cout << r << " ";
    cout << "\n\n";
